<form autocomplete="off">
  <div class="maxos-orderSelector">
    <div class="maxos-orderSelector-inputs">
      <div class="form-group">
        <label for="<%- idPrefix %>-orderNo" class="control-label"><%- t('maxos', 'orderSelector:orderNo') %></label>
        <input id="<%- idPrefix %>-orderNo" class="form-control" type="text" data-vkb="numeric" required maxlength="9" pattern="^[0-9]{9}$" autocomplete="off">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-cables" class="control-label"><%- t('maxos', 'orderSelector:cables') %></label>
        <div class="maxos-orderSelector-radios">
          <% [1, 2].forEach(function(n) { %>
          <div class="maxos-orderSelector-radio">
            <label><input type="radio" name="cables" required value="<%- n %>"><span><%- n %></span></label>
          </div>
          <% }) %>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label"><%- t('maxos', 'orderSelector:connectors') %></label>
        <div class="maxos-orderSelector-radios">
          <% [1, 2, 3].forEach(function(n) { %>
          <div class="maxos-orderSelector-radio">
            <label><input type="radio" name="connectors" required value="<%- n %>"><span><%- n %></span></label>
          </div>
          <% }) %>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label"><%- t('maxos', 'orderSelector:cores') %></label>
        <div class="maxos-orderSelector-radios">
          <% [5, 7].forEach(function(n) { %>
          <div class="maxos-orderSelector-radio">
            <label><input type="radio" name="cores" required value="<%- n %>"><span><%- n %></span></label>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
    <div id="<%- idPrefix %>-recentOrders" class="btn-group-vertical maxos-orderSelector-recentOrders hidden">
      <label class="control-label"><%- t('maxos', 'orderSelector:recentOrders') %></label>
    </div>
  </div>
  <div class="form-actions maxos-orderSelector-actions">
    <button type="submit" class="btn btn-primary"><%- t('maxos', 'orderSelector:submit') %></button>
    <button type="button" class="cancel btn btn-link"><%- t('core', 'ACTION_FORM:BUTTON:cancel') %></button>
  </div>
</form>
